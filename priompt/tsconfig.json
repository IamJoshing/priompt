{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true,
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "Priompt.createElement",
    "jsxFragmentFactory": "Priompt.Fragment",
    "sourceMap": true,
    "inlineSources": true,
    "strictPropertyInitialization": true,
    "declarationMap": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
